<div class="row">
	<div class="small-4 columns">
		<h3>Disk</h3>
	</div>
	<div class="small-5 columns">
		<h3>File Name</h3>
	</div>
	<div class="small-3 columns">

	</div>
</div>
<div class="row">
	<div class="small-4 columns">
		<%= select_tag(:disk, options_for_select([@disk] + ["All"] + Disk.select(:disk).group(:disk).order(:disk).map {|d|[d.disk]})) %>
	</div>
	<div class="small-5 columns">
		<%= text_field_tag(:filename, @filename) %>
	</div>
	<div class="small-3 columns">
		<% href_base_search="?page_number=0&records_per_page=#{@records_per_page}&disk=" %>
		<a class="th" href="javascript:window.location.href='<%= href_base_search%>' + $('#disk').val() + '&filename=' + $('#filename').val()">
			<img src="/assets/toolbar_find.png">
		</a>
	</div>
</div>
